{
  "name": "eleventy-starter-with-tests",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npx @11ty/eleventy",
    "start": "npx @11ty/eleventy --serve",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "pretest:e2e": "npm run build",
    "test:e2e": "npx playwright test",
    "lint:css": "stylelint \"src/assets/styles/**/*.css\"",
    "lint:liquid": "liquid-linter-cli \"src/**/*.{liquid,html}\"",
    "lint:md": "markdownlint \"src/posts/**/*.md\"",
    "lint": "npm run lint:css && npm run lint:liquid && npm run lint:md",
    "deploy": "npx netlify deploy --prod --dir=_site"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.30.0",
    "@tailwindcss/postcss": "^4.1.7",
    "autoprefixer": "^10.0.0",
    "cssnano": "^5.0.0",
    "jest": "^29.0.0",
    "liquid-linter-cli": "^1.0.0",
    "markdownlint-cli": "^0.33.0",
    "netlify-cli": "^21.5.0",
    "postcss": "^8.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^30.0.0",
    "tailwindcss": "^4.0.0"
  }
}
